# =============================================================================
# Dental Clinic Backend - Production Environment Configuration
# =============================================================================
# Copy this file to .env on your production server and update values.
# NEVER commit the actual .env file to version control.
# =============================================================================

APP_NAME="Dental Clinic"
APP_ENV=production
APP_KEY=
APP_DEBUG=false
APP_TIMEZONE=UTC
APP_URL=https://api.your-domain.com

APP_LOCALE=en
APP_FALLBACK_LOCALE=en
APP_FAKER_LOCALE=en_US

APP_MAINTENANCE_DRIVER=file

# =============================================================================
# Logging Configuration
# =============================================================================

LOG_CHANNEL=stack
LOG_STACK=single
LOG_DEPRECATIONS_CHANNEL=null
LOG_LEVEL=warning

# =============================================================================
# Database Configuration (Managed PostgreSQL)
# =============================================================================

DB_CONNECTION=pgsql
DB_HOST=your-managed-db-host.db.ondigitalocean.com
DB_PORT=25060
DB_DATABASE=dental_clinic
DB_USERNAME=doadmin
DB_PASSWORD=your-database-password
DB_SSLMODE=require

# =============================================================================
# Redis Configuration (Managed Redis)
# =============================================================================

REDIS_CLIENT=phpredis
REDIS_HOST=your-redis-host.db.ondigitalocean.com
REDIS_PASSWORD=your-redis-password
REDIS_PORT=25061

# =============================================================================
# Cache Configuration
# =============================================================================

CACHE_STORE=redis
CACHE_PREFIX=dental_clinic_prod_

# =============================================================================
# Session Configuration
# =============================================================================

SESSION_DRIVER=redis
SESSION_LIFETIME=120
SESSION_ENCRYPT=true
SESSION_PATH=/
SESSION_DOMAIN=.your-domain.com
SESSION_SECURE_COOKIE=true

# =============================================================================
# Queue Configuration
# =============================================================================

QUEUE_CONNECTION=redis

# =============================================================================
# Filesystem Configuration
# =============================================================================

FILESYSTEM_DISK=s3

# DigitalOcean Spaces (S3-compatible)
AWS_ACCESS_KEY_ID=your-spaces-access-key
AWS_SECRET_ACCESS_KEY=your-spaces-secret-key
AWS_DEFAULT_REGION=nyc3
AWS_BUCKET=your-bucket-name
AWS_ENDPOINT=https://nyc3.digitaloceanspaces.com
AWS_USE_PATH_STYLE_ENDPOINT=false

# =============================================================================
# Mail Configuration (Mailgun/SendGrid/etc.)
# =============================================================================

MAIL_MAILER=smtp
MAIL_HOST=smtp.mailgun.org
MAIL_PORT=587
MAIL_USERNAME=postmaster@your-domain.com
MAIL_PASSWORD=your-mail-password
MAIL_ENCRYPTION=tls
MAIL_FROM_ADDRESS="noreply@your-domain.com"
MAIL_FROM_NAME="${APP_NAME}"

# =============================================================================
# Sanctum Configuration
# =============================================================================

SANCTUM_STATEFUL_DOMAINS=your-frontend-domain.com,www.your-frontend-domain.com

# =============================================================================
# Horizon Configuration
# =============================================================================

HORIZON_PREFIX=dental_clinic_horizon_prod:

# =============================================================================
# Security Configuration
# =============================================================================

BCRYPT_ROUNDS=12

# =============================================================================
# CORS Configuration
# =============================================================================

CORS_ALLOWED_ORIGINS=https://your-frontend-domain.com

# Main application domain (used for subdomain tenant resolution)
APP_DOMAIN=your-domain.com

# =============================================================================
# OpenAPI / Documentation (Disable in production)
# =============================================================================

VALIDATE_OPENAPI=false
